extends layout

block content
    .inner
        h2 Edit Your Account
        form(action="/account" method="POST")
        label(for="name")
        input(type="text" name="name" value=user.name) Name
        label(for="email")
        input(type="email" name="email" value=user.email) Email Address
        input.button(type="submit" value="Update my account")